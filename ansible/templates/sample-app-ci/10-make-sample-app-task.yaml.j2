apiVersion: tekton.dev/v1beta1
kind: Task
metadata:
  name: make-sample-app-task
spec:
  params:
    - name: app-path
      description: Path to sample-app
  workspaces:
    - name: src
  steps:
    - name: make-build
      image: "{{ go_image }}"
      workingDir: $(workspaces.src.path)/$(params.app-path)
      command: ["/usr/bin/make"]
      args:
        - "build"
    