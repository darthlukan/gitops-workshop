---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ participant }}-sample-app
  namespace: {{ participant }}-sample-app
spec:
  replicas: 1
  selector:
    matchLabels:
      app: {{ participant }}-sample-app
  template:
    metadata:
      labels:
        app: {{ participant }}-sample-app
    spec:
      containers:
        - name: {{ participant }}-sample-app
          image: "quay.io/btomlins/greet:v0.0.1"
          command:
            - '/usr/bin/greet'
          args:
            - 'Hello {{ participant }}\!'
...
